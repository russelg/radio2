http://radio.local {
	root ./frontend/build
	index index.html

	# icecast proxy
	proxy /radio.ogg	localhost:8067 { transparent }
	proxy /radio.mp3	localhost:8067 { transparent }
	proxy /admin		localhost:8067 { transparent }
	proxy /style.css	localhost:8067 { transparent }
	proxy /tunein.png	localhost:8067 { transparent }

	# api proxy
	proxy /api			localhost:9555 { transparent }
}
